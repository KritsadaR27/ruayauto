# Application Configuration
PORT=3006
GIN_MODE=release

# Database Configuration
# Primary method: Use DATABASE_URL for full connection string
DATABASE_URL=postgres://ruay:ruay1234@localhost:55432/ruayAutoMsg?sslmode=disable

# Alternative method: Individual database parameters
# These will be used to build DATABASE_URL if DATABASE_URL is not set
DB_HOST=localhost
DB_PORT=55432
DB_USER=ruay
DB_PASSWORD=ruay1234
DB_NAME=ruayAutoMsg
DB_SSLMODE=disable

# Facebook Configuration
# You MUST replace these with your actual Facebook app credentials
FACEBOOK_APP_SECRET=your_facebook_app_secret_here
FACEBOOK_VERIFY_TOKEN=your_custom_verify_token_here
FACEBOOK_PAGE_ACCESS_TOKEN=your_facebook_page_access_token_here

# Alternative Facebook Configuration (same values, different naming)
FB_VERIFY_TOKEN=your_custom_verify_token_here
FB_PAGE_TOKEN=your_facebook_page_access_token_here

# Messenger Configuration (optional, if different from Facebook)
MESSENGER_VERIFY_TOKEN=your_messenger_verify_token_here
MESSENGER_PAGE_ACCESS_TOKEN=your_messenger_page_access_token_here

# Redis Configuration (optional, for caching)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Security Configuration (optional)
API_KEY=your_api_key_here
JWT_SECRET=your_jwt_secret_here

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Performance
CACHE_TTL=300
MAX_CONNECTIONS=100

# Features
ENABLE_ANALYTICS=true
ENABLE_SMART_REPLY=true
ENABLE_FUZZY_MATCHING=true

# External Services
WEBHOOK_TIMEOUT=30
API_TIMEOUT=10
